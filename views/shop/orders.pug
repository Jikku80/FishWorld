extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/form.css")

block content
    main 
        .order__Section
            if orders.length > 0
                h2 Orders Made So Far
                each order in orders
                    each product in order.products
                        .orderdetail Order For #{product.orderItem.quantity} #{product.fishName}
            else
                h2 No Orders Has Been Made Yet!!!