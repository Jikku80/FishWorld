extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/form.css")

block content
    main 
        .order__Section
            h2 Orders Made So Far
            if orders.length > 0
                each order in orders
                    each product in order.products
                        .orderdetail Order For #{product.orderItem.quantity} #{product.title}
            else
                h1 No Orders Has Been Made Yet!!!