extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/cart.css")

block content
    main
        .cart_section
            if cartProducts.length > 0
                h2 Fishes Added So Far
                ul.cart__item-list 
                    each p in cartProducts
                        li.cart__item
                            h1 #{p.title}
                            h2 Total Qt. : #{p.cartItem.quantity} 
                            form(action="/cart-delete-item" method="POST")
                                input(type="hidden" name="productId" value=`${p.id}`)
                                button.deleteitem(type="submit") &#10060;
                form(action="/orders" method="post")
                    button.btn.orderbtn(type="submit") Order 
            else
                h1 Your Bag is empty!