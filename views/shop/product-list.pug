extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        div.card__image
                            img(src=`${product.imageUrl}`, alt="A Book")
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__content
                            p.product__price Price : Rs.#{product.price}
                            p.product__description Detail : #{product.description}
                        .card__actions
                            a.btn(href=`/products/${product.id}`) View
                            form(action="/cart" method="POST")
                                input(type="hidden" name="productId" value=`${product.id}`)
                                button.btn(type="submit") Add to Bag
        else
            h1 No Fish Added Yet

