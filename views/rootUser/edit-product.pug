extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/form.css")

block content
    main
        h2.graycol #{editing ? "Update Your Fish Detail" : "Add New Fish"}
        form.product-form(action=`${editing ? "/root/updateFish" : "/root/addFish"}`, method="POST")
            .form_add_Section
                .form-control
                    label(for="fishName") Fish Name :
                    input(type="text", name="fishName" value=`${editing ? product.fishName : ""}`)#title
                    label(for="fishType") Fish Category :
                    input(type="text", name="fishType" value=`${editing ? product.fishType : ""}`)#type
                    label(for="fishPrice") Fish Price :
                    input(type="text", name="fishPrice" value=`${editing ? product.fishPrice : ""}`)#price
                    label(for="fishBGImg") Fish Image Url :
                    input(type="text", name="fishBGImg" value=`${editing ? product.fishImage : ""}`)#imageUrl
                    label(for="fishDetail") Fish Detail :
                    textarea(type="text", name="fishDetail" rows="5" cols="35")#description #{editing ? product.fishDetail : ""}
                    if editing
                        input(type="hidden" name="fishId" value=`${product.id}`)
                button.btn(type="submit") #{editing ? "Update Fish" : "Add Fish"}