extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/form.css")

block content
    main
        h2.graycol #{editing ? "Update Your Fish Detail" : "Add New Fish"}
        form.product-form(action=`${editing ? "/admin/edit-product" : "/admin/add-product"}`, method="POST")
            .form_add_Section
                .form-control
                    label(for="title") Fish Name :
                    input(type="text", name="title" value=`${editing ? product.title : ""}`)#title
                    label(for="price") Fish Price :
                    input(type="text", name="price" value=`${editing ? product.price : ""}`)#price
                    label(for="imageUrl") Fish Image Url :
                    input(type="text", name="imageUrl" value=`${editing ? product.imageUrl : ""}`)#imageUrl
                    label(for="description") Fish Detail :
                    textarea(type="text", name="description" rows="5" cols="35")#description #{editing ? product.description : ""}
                    if editing
                        input(type="hidden" name="productId" value=`${product.id}`)
                button.btn(type="submit") #{editing ? "Update Fish" : "Add Fish"}